{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES5",
        "moduleResolution": "Node",
        "module": "ESNext",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"]
        },
    },
    "include": ["src"],
}